xset r rate 190 30
xset m 8/1 2

xrdb -load ~/.Xresources &
urxvtd &
source ~/.zshenv
emacs --daemon &

case $1 in
  *openbox*)
    export GDK_SCALE=2
    sleep 0.1
    nitrogen --restore &
    compton -b --config ~/.config/compton.conf &
    ;;
  *i3*)
    export GDK_SCALE=2
    xrandr --output DP-4 --scale 1.2x1.2 &
    sleep 0.1
    nitrogen --restore &
    compton -b --config ~/.config/compton.conf &
    ;;
  *gnome*)
    ;;
esac
